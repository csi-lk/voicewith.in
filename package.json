{
  "name": "voicewithin",
  "version": "1.0.0",
  "description": "Voice note-taking menu bar app",
  "main": "dist/index.js",
  "scripts": {
    "dev": "electron dist/index.js",
    "build": "tsc",
    "start": "electron dist/index.js",
    "lint": "oxlint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "electron-rebuild",
    "rebuild": "electron-rebuild -f -w iohook"
