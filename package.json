    "ollama": "^0.5.0",
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "oxlint": "^0.7.0",
    "prettier": "^3.2.5",
    "electron-rebuild": "^3.2.9"
  }
